! @\
! !ARGUMENTS: @\
!   type(ESMF_LocStream) :: locstream                  @\
!   <type> (ESMF_KIND_<kind>), dimension(<rank>), target :: farray @\
!   type(ESMF_IndexFlag), intent(in)            :: indexflag @\
