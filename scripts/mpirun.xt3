#!/bin/ksh
# $Id: mpirun.xt3,v 1.1 2006/06/13 18:40:40 svasquez Exp $
# This script provides an interface such that the simple command
# mpirun -np # runs # copies of the program in parallel.



if [ "$1" != "-np" ]
then
        echo "Usage: yod -np #"
        exit 1
fi

num_procs=$2
shift 2
prog=$*

yod -np $num_procs $prog


