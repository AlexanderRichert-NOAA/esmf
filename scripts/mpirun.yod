#!/bin/ksh
# $Id: mpirun.yod,v 1.1 2006/09/28 05:36:56 theurich Exp $
# This script provides an interface such that the simple command
# mpirun -np # 
# runs # copies of the program in parallel.

if [ "$1" != "-np" ] 
then
        echo "Usage: mpirun -np #"
        exit 1
fi

num_procs=$2
shift 2
prog=$*

yod $ESMF_MPIRUNOPTIONS -np $num_procs $prog
