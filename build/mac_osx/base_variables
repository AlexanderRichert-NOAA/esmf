#
CXX_CC		   = g++ -fPIC
CXX_FC		   = f95 -YEXT_NAMES=LCS -s 
CXX_CLINKER_SLFLAG = -Wl,-rpath,
CXX_FLINKER_SLFLAG = -Wl,-rpath,
CXX_CLINKER	   = g++
CXX_FLINKER	   = g++
